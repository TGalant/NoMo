<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoMo.Pledge">
    <ContentPage.Content>
        <StackLayout>
            <WebView HeightRequest="500" VerticalOptions="StartAndExpand" 
                     Source="http://gbv1.azurewebsites.net/2021/03/16/pledge/">
            </WebView>
            <Button Text="Submit"
                        VerticalOptions="Center"
                HorizontalOptions="Center"
                     BackgroundColor="#96989B"
                        Font="Bold "
                        TextColor="WhiteSmoke"
                        FontSize="Medium"
                        Padding="15" 
                        CornerRadius="10"
                        />
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 